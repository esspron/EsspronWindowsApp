<Application x:Class="EsspronAlcoholTester.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:EsspronAlcoholTester.Converters"
             Startup="Application_Startup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/Colors.xaml"/>
                <ResourceDictionary Source="Themes/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Converters -->
            <BooleanToVisibilityConverter x:Key="BoolToVis"/>
            <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVis"/>
            <converters:ViewVisibilityConverter x:Key="ViewVisibilityConverter"/>
            <converters:FirstLetterConverter x:Key="FirstLetterConverter"/>
            <converters:ResultBackgroundConverter x:Key="ResultBackgroundConverter"/>
            <converters:ResultForegroundConverter x:Key="ResultForegroundConverter"/>
            <converters:DeviceStateColorConverter x:Key="DeviceStateColorConverter"/>
            <converters:DeviceStateDotConverter x:Key="DeviceStateDotConverter"/>
            <converters:DeviceStateTextConverter x:Key="DeviceStateTextConverter"/>
            <converters:DeviceIconBackgroundConverter x:Key="DeviceIconBackgroundConverter"/>
            <converters:ProgressVisibilityConverter x:Key="ProgressVisibilityConverter"/>
            <converters:ProgressWidthConverter x:Key="ProgressWidthConverter"/>
            <converters:StepBackgroundConverter x:Key="StepBackgroundConverter"/>
            <converters:StepForegroundConverter x:Key="StepForegroundConverter"/>
            <converters:EmptyStateVisibilityConverter x:Key="EmptyStateVisibilityConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
