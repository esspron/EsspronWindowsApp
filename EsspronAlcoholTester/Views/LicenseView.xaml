<UserControl x:Class="EsspronAlcoholTester.Views.LicenseView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="900">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>
    
    <StackPanel>
        <!-- Current License Card -->
        <Border Style="{StaticResource CardStyle}" Margin="0,0,0,24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <StackPanel Orientation="Horizontal">
                        <Border Width="56" Height="56" CornerRadius="14" Background="{StaticResource PrimaryGradientBrush}">
                            <TextBlock Text="ðŸ”‘" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel Margin="16,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="License Status" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}"/>
                            <TextBlock Text="{Binding DataContext.CurrentLicense.PlanName, RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue=Professional Plan}" 
                                       FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- License Details -->
                    <Grid Margin="0,24,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="License Key" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}"/>
                            <TextBlock Text="{Binding DataContext.CurrentLicense.LicenseKey, RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue=ESSPRON-XXXX-XXXX}" 
                                       FontSize="13" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,4,0,0"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Devices Activated" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}"/>
                            <TextBlock FontSize="13" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,4,0,0">
                                <Run Text="{Binding DataContext.CurrentLicense.ActivatedDevices, RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue=1}"/>
                                <Run Text=" / "/>
                                <Run Text="{Binding DataContext.CurrentLicense.AllowedDevices, RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue=5}"/>
                            </TextBlock>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Expires On" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}"/>
                            <TextBlock Text="{Binding DataContext.CurrentLicense.ExpiryDate, RelativeSource={RelativeSource AncestorType=UserControl}, StringFormat='{}{0:MMM dd yyyy}', FallbackValue='Dec 31 2025'}" 
                                       FontSize="13" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,4,0,0"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="3">
                            <TextBlock Text="Monthly Price" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}"/>
                            <TextBlock Text="{Binding DataContext.CurrentLicense.MonthlyPrice, RelativeSource={RelativeSource AncestorType=UserControl}, StringFormat='â‚¹{0:N0}/month', FallbackValue='â‚¹2500/month'}" 
                                       FontSize="13" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
                
                <!-- Status Badge -->
                <Border Grid.Column="1" Background="#DCFCE7" CornerRadius="8" Padding="16,8" 
                        VerticalAlignment="Top" HorizontalAlignment="Right">
                    <TextBlock Text="Active" FontSize="13" FontWeight="SemiBold" Foreground="#15803D"/>
                </Border>
            </Grid>
        </Border>
        
        <!-- Activate New License Card -->
        <Border Style="{StaticResource CardStyle}" Margin="0,0,0,24">
            <StackPanel>
                <TextBlock Text="Activate New License" FontSize="18" FontWeight="SemiBold" 
                           Foreground="{StaticResource TextPrimaryBrush}"/>
                <TextBlock Text="Enter a new license key to activate more devices or extend your subscription" 
                           FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,4,0,20"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox Grid.Column="0" Style="{StaticResource ModernTextBoxStyle}" Height="48"
                             Text="{Binding NewLicenseKey, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,12,0"/>
                    <Button Grid.Column="1" Content="Activate License" 
                            Style="{StaticResource PrimaryButtonStyle}" Height="48"/>
                </Grid>
                
                <TextBlock Text="License key format: ESSPRON-XXXX-XXXX-XXXX" 
                           FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,8,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Activated Devices Card -->
        <Border Style="{StaticResource CardStyle}" Margin="0,0,0,24">
            <StackPanel>
                <TextBlock Text="Activated Devices" FontSize="18" FontWeight="SemiBold" 
                           Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,16"/>
                
                <!-- Device List -->
                <Border Background="#F8FAFC" CornerRadius="12" Padding="16" Margin="0,0,0,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Border Grid.Column="0" Width="44" Height="44" CornerRadius="10" Background="{StaticResource PrimaryBrush}">
                            <TextBlock Text="ðŸ”Œ" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        
                        <StackPanel Grid.Column="1" Margin="16,0" VerticalAlignment="Center">
                            <TextBlock Text="Esspron Alcohol Tester Pro" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                            <TextBlock Text="Serial: SN-2024-001234 â€¢ Activated: Dec 01, 2024" 
                                       FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                        </StackPanel>
                        
                        <Border Grid.Column="2" Background="#DCFCE7" CornerRadius="4" Padding="8,4" VerticalAlignment="Center">
                            <TextBlock Text="Active" FontSize="11" FontWeight="SemiBold" Foreground="#15803D"/>
                        </Border>
                        
                        <Button Grid.Column="3" Content="Deactivate" 
                                Style="{StaticResource SecondaryButtonStyle}" 
                                Padding="12,6" Margin="12,0,0,0" FontSize="12"/>
                    </Grid>
                </Border>
                
                <!-- Empty State for Devices -->
                <Border Background="#F8FAFC" CornerRadius="12" Padding="30"
                        Visibility="Collapsed">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="ðŸ”Œ" FontSize="36" HorizontalAlignment="Center"/>
                        <TextBlock Text="No devices activated yet" FontSize="14" FontWeight="SemiBold" 
                                   Foreground="{StaticResource TextPrimaryBrush}" Margin="0,12,0,4" HorizontalAlignment="Center"/>
                        <TextBlock Text="Connect a device and enter your license key to activate it" 
                                   FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
        
        <!-- Pricing Plans Card -->
        <Border Style="{StaticResource CardStyle}">
            <StackPanel>
                <TextBlock Text="Subscription Plans" FontSize="18" FontWeight="SemiBold" 
                           Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,16"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Basic Plan -->
                    <Border Grid.Column="0" Background="#F8FAFC" CornerRadius="12" Padding="20" Margin="0,0,8,0">
                        <StackPanel>
                            <TextBlock Text="Basic" FontSize="16" FontWeight="SemiBold" 
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                <TextBlock Text="â‚¹2,000" FontSize="28" FontWeight="Bold" 
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock Text="/month" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}" 
                                           VerticalAlignment="Bottom" Margin="4,0,0,4"/>
                            </StackPanel>
                            <TextBlock Text="Per Device" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                            
                            <Border BorderThickness="0,1,0,0" BorderBrush="#E2E8F0" Margin="0,16"/>
                            
                            <StackPanel Margin="0,0,0,4">
                                <TextBlock Text="âœ“ 1 Device" Foreground="{StaticResource TextSecondaryBrush}" FontSize="13"/>
                            </StackPanel>
                            <StackPanel Margin="0,4">
                                <TextBlock Text="âœ“ Unlimited Data Imports" Foreground="{StaticResource TextSecondaryBrush}" FontSize="13"/>
                            </StackPanel>
                            <StackPanel Margin="0,4">
                                <TextBlock Text="âœ“ CSV Export" Foreground="{StaticResource TextSecondaryBrush}" FontSize="13"/>
                            </StackPanel>
                            <StackPanel Margin="0,4">
                                <TextBlock Text="âœ“ Email Support" Foreground="{StaticResource TextSecondaryBrush}" FontSize="13"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- Professional Plan -->
                    <Border Grid.Column="1" Background="{StaticResource PrimaryBrush}" CornerRadius="12" Padding="20" Margin="8,0">
                        <StackPanel>
                            <Grid>
                                <TextBlock Text="Professional" FontSize="16" FontWeight="SemiBold" Foreground="White"/>
                                <Border Background="White" CornerRadius="4" Padding="8,2" HorizontalAlignment="Right">
                                    <TextBlock Text="POPULAR" FontSize="10" FontWeight="Bold" Foreground="{StaticResource PrimaryBrush}"/>
                                </Border>
                            </Grid>
                            <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                <TextBlock Text="â‚¹2,500" FontSize="28" FontWeight="Bold" Foreground="White"/>
                                <TextBlock Text="/month" FontSize="14" Foreground="#C7D2FE" 
                                           VerticalAlignment="Bottom" Margin="4,0,0,4"/>
                            </StackPanel>
                            <TextBlock Text="Per Device" FontSize="12" Foreground="#C7D2FE"/>
                            
                            <Border BorderThickness="0,1,0,0" BorderBrush="#4F46E5" Margin="0,16"/>
                            
                            <StackPanel Margin="0,0,0,4">
                                <TextBlock Text="âœ“ Up to 5 Devices" Foreground="White" FontSize="13"/>
                            </StackPanel>
                            <StackPanel Margin="0,4">
                                <TextBlock Text="âœ“ Unlimited Data Imports" Foreground="White" FontSize="13"/>
                            </StackPanel>
                            <StackPanel Margin="0,4">
                                <TextBlock Text="âœ“ CSV &amp; Excel Export" Foreground="White" FontSize="13"/>
                            </StackPanel>
                            <StackPanel Margin="0,4">
                                <TextBlock Text="âœ“ Priority Support" Foreground="White" FontSize="13"/>
                            </StackPanel>
                            <StackPanel Margin="0,4">
                                <TextBlock Text="âœ“ Analytics Dashboard" Foreground="White" FontSize="13"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- Enterprise Plan -->
                    <Border Grid.Column="2" Background="#F8FAFC" CornerRadius="12" Padding="20" Margin="8,0,0,0">
                        <StackPanel>
                            <TextBlock Text="Enterprise" FontSize="16" FontWeight="SemiBold" 
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                <TextBlock Text="â‚¹3,000" FontSize="28" FontWeight="Bold" 
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock Text="/month" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}" 
                                           VerticalAlignment="Bottom" Margin="4,0,0,4"/>
                            </StackPanel>
                            <TextBlock Text="Per Device" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                            
                            <Border BorderThickness="0,1,0,0" BorderBrush="#E2E8F0" Margin="0,16"/>
                            
                            <StackPanel Margin="0,0,0,4">
                                <TextBlock Text="âœ“ Unlimited Devices" Foreground="{StaticResource TextSecondaryBrush}" FontSize="13"/>
                            </StackPanel>
                            <StackPanel Margin="0,4">
                                <TextBlock Text="âœ“ All Pro Features" Foreground="{StaticResource TextSecondaryBrush}" FontSize="13"/>
                            </StackPanel>
                            <StackPanel Margin="0,4">
                                <TextBlock Text="âœ“ PDF Reports" Foreground="{StaticResource TextSecondaryBrush}" FontSize="13"/>
                            </StackPanel>
                            <StackPanel Margin="0,4">
                                <TextBlock Text="âœ“ API Access" Foreground="{StaticResource TextSecondaryBrush}" FontSize="13"/>
                            </StackPanel>
                            <StackPanel Margin="0,4">
                                <TextBlock Text="âœ“ Dedicated Support" Foreground="{StaticResource TextSecondaryBrush}" FontSize="13"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
                
                <TextBlock Text="Contact sales@esspron.com for custom enterprise pricing" 
                           FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" 
                           HorizontalAlignment="Center" Margin="0,20,0,0"/>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>
